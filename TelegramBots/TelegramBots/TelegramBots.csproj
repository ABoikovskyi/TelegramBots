    <Content Update="Views\NBCocktailsBar\Ingredients.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
    </Content>
    <Content Update="Views\NBCocktailsBar\Ingredient.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
    </Content>
    <Content Update="Views\NBCocktailsBar\Cocktail.cshtml">
